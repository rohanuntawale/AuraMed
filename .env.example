# Backend configuration
# Copy to .env and fill values. Do NOT commit .env.

# Shared staff PIN for Option A auth
CLINIC_PIN=0000

# Choose ONE of the following DB modes:

# (Recommended) Connect directly to Supabase Postgres (database of record)
# Get this from Supabase Dashboard -> Project Settings -> Database -> Connection string (URI)
# Example (do not use literally):
# DATABASE_URL=postgresql+psycopg2://postgres:<PASSWORD>@db.<PROJECT-REF>.supabase.co:5432/postgres

# (Local fallback) If DATABASE_URL is empty/unset, backend uses local SQLite file.
# DATABASE_URL=

# Supabase API (NOT used by current SQLAlchemy backend)
# Only needed if we refactor backend to use Supabase REST client instead of SQLAlchemy.
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
